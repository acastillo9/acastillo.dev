---
import Icon from "./icon/Icon.astro";

interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props;
---

<div class="flex flex-col items-center hover:scale-125 transition">
  <Icon icon={icon} />
  <span class="mt-2 text-text-light dark:text-text">{title}</span>
</div>
